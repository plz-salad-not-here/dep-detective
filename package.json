{
  "name": "dep-detective",
  "version": "0.0.1",
  "description": "A TypeScript dependency analyzer that detects unused and misplaced dependencies",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "bin": {
    "dep-detective": "./bin/cli.js"
  },
  "scripts": {
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "bunx biome lint src/",
    "format": "bunx biome format --write src/",
    "format:check": "bunx biome format src/",
    "check": "bunx biome check --write src/",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "validate": "bun run typecheck && bun run lint && bun test",
    "prepublishOnly": "bun run build",
    "prepare": "husky"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "dependency",
    "analyzer",
    "typescript",
    "unused",
    "devDependencies",
    "npm",
    "package-manager",
    "bun"
  ],
  "author": "yuniithings@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/plz-salad-not-here/dep-detective.git"
  },
  "homepage": "https://github.com/plz-salad-not-here/dep-detective#readme",
  "bugs": {
    "url": "https://github.com/plz-salad-not-here/dep-detective/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/bun": "latest",
    "husky": "^9.1.7"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@mobily/ts-belt": "4.0.0-rc.5",
    "glob": "^11.0.3",
    "ts-pattern": "^5.8.0"
  }
}
